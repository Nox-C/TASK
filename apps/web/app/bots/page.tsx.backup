              <div className="space-y-4">
                {/* Basic Info */}
                <div>
                  <label className="block text-sm font-medium text-walle-beige mb-2">Bot Name</label>
                  <input
                    type="text"
                    value={botConfig.name}
                    onChange={(e) => updateBotParameter('', 'name', e.target.value)}
                    className="w-full px-3 py-2 bg-walle-darkblue border border-walle-rust rounded text-white"
                    placeholder="Enter bot name"
                  />
                </div>

                <div>
                  <label className="block text-sm font-medium text-walle-beige mb-2">Symbol</label>
                  <select
                    value={botConfig.symbol}
                    onChange={(e) => updateBotParameter('', 'symbol', e.target.value)}
                    className="w-full px-3 py-2 bg-walle-darkblue border border-walle-rust rounded text-white"
                  >
                    <option value="BTC-USDT">BTC-USDT</option>
                    <option value="ETH-USDT">ETH-USDT</option>
                    <option value="SOL-USDT">SOL-USDT</option>
                    <option value="ADA-USDT">ADA-USDT</option>
                  </select>
                </div>

                {/* Risk Management */}
                <div className="grid grid-cols-2 gap-4">
                  <div>
                    <label className="block text-sm font-medium text-walle-beige mb-2">Max Position %</label>
                    <input
                      type="range"
                      min="1"
                      max="20"
                      value={botConfig.riskManagement.maxPositionSize * 100}
                      onChange={(e) => updateBotParameter('riskManagement', 'maxPositionSize', e.target.value / 100)}
                      className="w-full"
                    />
                    <span className="text-xs text-walle-beige">{(botConfig.riskManagement.maxPositionSize * 100).toFixed(0)}%</span>
                  </div>
                  
                  <div>
                    <label className="block text-sm font-medium text-walle-beige mb-2">Stop Loss %</label>
                    <input
                      type="range"
                      min="1"
                      max="10"
                      value={botConfig.riskManagement.stopLoss}
                      onChange={(e) => updateBotParameter('riskManagement', 'stopLoss', e.target.value)}
                      className="w-full"
                    />
                    <span className="text-xs text-walle-beige">{botConfig.riskManagement.stopLoss}%</span>
                  </div>
                </div>

                {/* Backtest Controls */}
                <div className="border-t border-walle-rust pt-4">
                  <h4 className="text-md font-medium text-walle-yellow mb-3">üìä Backtest Settings</h4>
                  <div className="grid grid-cols-2 gap-4 mb-4">
