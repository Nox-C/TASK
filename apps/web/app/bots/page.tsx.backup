"use client";
import { Button, Card, Skeleton, StatusPill } from "@task/ui";
import Link from "next/link";
import { useEffect, useRef, useState } from "react";
import { Api } from "../lib/api";
import { connectActivity } from "../lib/ws";

// Unified Charting Component
const UnifiedChart = ({
  botConfig,
  mode,
  performanceData,
  backtestResult,
}: {
  botConfig: any;
  mode: "building" | "backtesting" | "live";
  performanceData: any[];
  backtestResult?: any;
}) => {
  const canvasRef = useRef<HTMLCanvasElement>(null);

  useEffect(() => {
    if (!canvasRef.current) return;

    const canvas = canvasRef.current;
    const ctx = canvas.getContext("2d");
    if (!ctx) return;

    // Clear canvas
    ctx.clearRect(0, 0, canvas.width, canvas.height);

    // Draw based on mode and configuration
    if (mode === "building") {
      drawBotConfigurationChart(ctx, botConfig, canvas);
    } else if (mode === "backtesting" && backtestResult) {
      drawBacktestChart(ctx, backtestResult, canvas);
    } else if (mode === "live") {
      drawLivePerformanceChart(ctx, performanceData, canvas);
    }
  }, [botConfig, mode, performanceData, backtestResult]);

  const drawBotConfigurationChart = (
    ctx: CanvasRenderingContext2D,
    config: any,
    canvas: HTMLCanvasElement
  ) => {
    const width = canvas.width;
    const height = canvas.height;

    // Draw risk management visualization
    ctx.fillStyle = "#fbbf24";
    ctx.fillRect(
      20,
      20,
      (config.riskManagement?.maxPositionSize || 0.1) * 200,
      40
    );
    ctx.fillStyle = "#ffffff";
    ctx.font = "12px sans-serif";
    ctx.fillText(
      `Max Position: ${(config.riskManagement?.maxPositionSize || 0.1) * 100}%`,
      25,
      45
    );

    // Draw stop loss/take profit zones
    ctx.fillStyle = "#ef4444";
    ctx.fillRect(20, 80, (config.riskManagement?.stopLoss || 2) * 10, 30);
    ctx.fillStyle = "#10b981";
    ctx.fillRect(20, 120, (config.riskManagement?.takeProfit || 5) * 10, 30);

    ctx.fillStyle = "#ffffff";
    ctx.fillText(
      `Stop Loss: ${config.riskManagement?.stopLoss || 2}%`,
      25,
      100
    );
    ctx.fillText(
      `Take Profit: ${config.riskManagement?.takeProfit || 5}%`,
      25,
      140
    );

    // Draw strategy type indicator
    ctx.fillStyle = "#3b82f6";
    ctx.beginPath();
    ctx.arc(width - 60, 60, 30, 0, 2 * Math.PI);
    ctx.fill();
    ctx.fillStyle = "#ffffff";
    ctx.textAlign = "center";
    ctx.fillText(config.botType === "template" ? "TPL" : "MAN", width - 60, 65);
  };

  const drawBacktestChart = (
    ctx: CanvasRenderingContext2D,
    result: any,
    canvas: HTMLCanvasElement
  ) => {
    const width = canvas.width;
    const height = canvas.height;

    // Draw equity curve
    if (result.equity && result.equity.length > 0) {
      ctx.strokeStyle = "#10b981";
      ctx.lineWidth = 2;
      ctx.beginPath();

      const maxEquity = Math.max(...result.equity.map((e: any) => e.equity));
      const minEquity = Math.min(...result.equity.map((e: any) => e.equity));
      const range = maxEquity - minEquity;

      result.equity.forEach((point: any, index: number) => {
        const x = (index / (result.equity.length - 1)) * (width - 40) + 20;
        const y =
          height - 40 - ((point.equity - minEquity) / range) * (height - 80);

        if (index === 0) {
          ctx.moveTo(x, y);
        } else {
          ctx.lineTo(x, y);
        }
      });

      ctx.stroke();

      // Draw summary metrics
      ctx.fillStyle = "#ffffff";
      ctx.font = "14px sans-serif";
      ctx.fillText(
        `Return: ${result.summary?.totalReturnPercent?.toFixed(2) || 0}%`,
        20,
        30
      );
      ctx.fillText(
        `Win Rate: ${result.summary?.winRate?.toFixed(1) || 0}%`,
        20,
        50
      );
      ctx.fillText(
        `Sharpe: ${result.summary?.sharpeRatio?.toFixed(2) || 0}`,
        20,
        70
      );
    }
  };

  const drawLivePerformanceChart = (
    ctx: CanvasRenderingContext2D,
    data: any[],
    canvas: HTMLCanvasElement
  ) => {
    const width = canvas.width;
    const height = canvas.height;

    if (data.length === 0) return;

    // Draw performance line
    ctx.strokeStyle = "#fbbf24";
    ctx.lineWidth = 2;
    ctx.beginPath();

    const maxValue = Math.max(...data.map((d) => d.value));
    const minValue = Math.min(...data.map((d) => d.value));
    const range = maxValue - minValue;

    data.forEach((point, index) => {
      const x = (index / (data.length - 1)) * (width - 40) + 20;
      const y =
        height - 40 - ((point.value - minValue) / range) * (height - 80);

      if (index === 0) {
        ctx.moveTo(x, y);
      } else {
        ctx.lineTo(x, y);
      }
    });

    ctx.stroke();

    // Draw current value
    ctx.fillStyle = "#ffffff";
    ctx.font = "16px sans-serif";
    const latestValue = data[data.length - 1]?.value || 0;
    ctx.fillText(`Current: $${latestValue.toFixed(2)}`, 20, 30);
  };

  return (
    <div className="bg-walle-darkgray border border-walle-rust rounded-lg p-4">
      <h3 className="text-walle-yellow font-semibold mb-3">
        {mode === "building" && "üîß Bot Configuration Visual"}
        {mode === "backtesting" && "üìä Backtest Results"}
        {mode === "live" && "üìà Live Performance"}
      </h3>
      <canvas
        ref={canvasRef}
        width={600}
        height={200}
        className="w-full bg-walle-darkblue rounded"
      />
    </div>
  );
};

export default function BotsPage() {
  const [bots, setBots] = useState<Awaited<ReturnType<typeof Api.bots.list>>>(
    []
  );
  const [manualBots, setManualBots] = useState<any[]>([]);
  const [strategies, setStrategies] = useState<
    Awaited<ReturnType<typeof Api.strategies.list>>
  >([]);
  const [loading, setLoading] = useState(true);
  const [showCreateForm, setShowCreateForm] = useState(false);
  const [newBot, setNewBot] = useState({ name: "", strategyId: "" });
  const [isConnected, setIsConnected] = useState(false);
  const [liveActivity, setLiveActivity] = useState<Record<string, any>>({});

  // Dashboard state
  const [selectedBot, setSelectedBot] = useState<any>(null);
  const [showBotDetails, setShowBotDetails] = useState(false);
  const [viewMode, setViewMode] = useState<"dashboard" | "details">(
    "dashboard"
  );
  const [performanceData, setPerformanceData] = useState<any[]>([]);

  // Bot Builder State
  const [botConfig, setBotConfig] = useState({
    name: "",
    description: "",
    symbol: "BTC-USDT",
    botType: "template",
    strategy: null,
    customRules: [],
    riskManagement: {
      maxPositionSize: 0.1,
      stopLoss: 2,
      takeProfit: 5,
      maxDailyLoss: 5,
      maxOpenPositions: 3,
    },
    execution: {
      executionType: "market",
      slippage: 0.1,
      commission: 0.1,
    },
    schedule: {
      enabled: false,
      startTime: "09:00",
      endTime: "17:00",
      timezone: "UTC",
      daysOfWeek: ["monday", "tuesday", "wednesday", "thursday", "friday"],
    },
    backtestConfig: {
      startDate: new Date(Date.now() - 90 * 24 * 60 * 60 * 1000)
        .toISOString()
        .split("T")[0],
      endDate: new Date().toISOString().split("T")[0],
      initialBalance: 10000,
      commission: 0.1,
      slippage: 0.1,
    },
    backtestResult: null,
  });
  const [builderStep, setBuilderStep] = useState(1);
  const [backtestLoading, setBacktestLoading] = useState(false);

  useEffect(() => {
    const fetchData = async () => {
      try {
        const [botsData, strategiesData] = await Promise.all([
          Api.bots.list(),
          Api.strategies.list(),
        ]);
        setBots(botsData);
        setStrategies(strategiesData);

        // Fetch manual bots
        try {
          const manualBotsResponse = await fetch("/manual-bots");
          const manualBotsData = await manualBotsResponse.json();
          setManualBots(manualBotsData.bots || []);
        } catch (error) {
          console.error("Failed to fetch manual bots:", error);
          setManualBots([]);
        }

        setLoading(false);
      } catch (error) {
        // Log error for debugging in development
        if (process.env.NODE_ENV === "development") {
          console.error("Failed to fetch data:", error);
        }
        setLoading(false);
      }
    };

    fetchData();
  }, []);

  // WebSocket connection for real-time bot activity
  useEffect(() => {
    const disconnect = connectActivity({
      onEvent: (data) => {
        // Track bot activity
        if ((data as any).type === "bot" && (data as any).payload) {
          const payload = (data as any).payload;
          setLiveActivity((prev) => ({
            ...prev,
            [payload.botId]: {
              ...payload,
              timestamp: Date.now(),
            },
          }));
        }
      },
      onStatusChange: (s) => setIsConnected(s === "connected"),
    });
    return () => disconnect();
  }, []);

  const handleCreateBot = async (e: React.FormEvent) => {
    e.preventDefault();
    try {
      const created: any = await Api.bots.create(newBot);
      setBots([...bots, created]);
      setNewBot({ name: "", strategyId: "" });
      setShowCreateForm(false);
    } catch (error) {
      // Log error for debugging in development
      if (process.env.NODE_ENV === "development") {
        console.error("Failed to create bot:", error);
      }
    }
  };

  const toggleBot = async (
    botId: string,
    currentStatus: boolean,
    isManual = false
  ) => {
    try {
      if (isManual) {
        // Toggle manual bot
        const endpoint = currentStatus
          ? `/manual-bots/${botId}/deactivate`
          : `/manual-bots/${botId}/activate`;
        const response = await fetch(endpoint, { method: "POST" });
        if (response.ok) {
          setManualBots(
            manualBots.map((bot) =>
              bot.id === botId ? { ...bot, isActive: !currentStatus } : bot
            )
          );
        }
      } else {
        // Toggle regular bot
        if (currentStatus) await Api.bots.stop(botId);
        else await Api.bots.start(botId);
        setBots(
          bots.map((bot) =>
            bot.id === botId ? { ...bot, active: !currentStatus } : bot
          )
        );
      }
    } catch (error) {
      // Log error for debugging in development
      if (process.env.NODE_ENV === "development") {
        console.error("Failed to toggle bot:", error);
      }
    }
  };

  const deleteManualBot = async (botId: string) => {
    try {
      const response = await fetch(`/manual-bots/${botId}`, {
        method: "DELETE",
      });
      if (response.ok) {
        setManualBots(manualBots.filter((bot) => bot.id !== botId));
      }
    } catch (error) {
      console.error("Failed to delete manual bot:", error);
    }
  };

  const configureManualBot = (botId: string) => {
    // Navigate to manual bot configuration page
    window.location.href = `/bots/manual/edit/${botId}`;
  };

  // Unified Bot Management Functions
  const handleBotSelect = (bot: any, isManual = false) => {
    setSelectedBot({ ...bot, isManual });
    // Load bot configuration into builder for editing
    setBotConfig({
      ...botConfig,
      name: bot.name,
      description: bot.description || "",
      symbol: bot.symbol || "BTC-USDT",
      botType: isManual ? "manual" : "template",
      riskManagement: bot.riskManagement || botConfig.riskManagement,
      execution: bot.execution || botConfig.execution,
      schedule: bot.schedule || botConfig.schedule,
    });
  };

  const runUnifiedBacktest = async () => {
    setBacktestLoading(true);
    try {
      const response = await fetch("/api/backtest/advanced", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({
          symbol: botConfig.symbol,
          timeframe: "1h",
          startDate: botConfig.backtestConfig.startDate,
          endDate: botConfig.backtestConfig.endDate,
          initialBalance: botConfig.backtestConfig.initialBalance,
          commission: botConfig.backtestConfig.commission,
          slippage: botConfig.backtestConfig.slippage,
          strategy:
            botConfig.botType === "template"
              ? botConfig.strategy?.name
              : "manual",
          parameters: botConfig.customRules || {},
        }),
      });

      if (response.ok) {
        const result = await response.json();
        setBotConfig((prev) => ({ ...prev, backtestResult: result }));
        // Update performance data for live chart
        setPerformanceData(generatePerformanceData());
      }
    } catch (error) {
      console.error("Backtest failed:", error);
    } finally {
      setBacktestLoading(false);
    }
  };

  const updateBotParameter = (section: string, field: string, value: any) => {
    setBotConfig((prev) => ({
      ...prev,
      [section]: {
        ...prev[section as keyof typeof prev],
        [field]: value,
      },
    }));

    // Trigger real-time chart update
    setTimeout(() => {
      setPerformanceData(generatePerformanceData());
    }, 100);
  };

  const createOrUpdateBot = async () => {
    try {
      if (selectedBot) {
        // Update existing bot
        const response = await fetch(
          `/api/bots/${selectedBot.isManual ? "manual/" : ""}${selectedBot.id}`,
          {
            method: "PATCH",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify(botConfig),
          }
        );
      } else {
        // Create new bot
        const response = await fetch("/api/bots/manual", {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify(botConfig),
        });
      }

      // Refresh bots list
      const fetchData = async () => {
        const [botsData, manualBotsData] = await Promise.all([
          Api.bots.list(),
          fetch("/api/bots/manual").then((r) => r.json()),
        ]);
        setBots(botsData);
        setManualBots(manualBotsData);
      };
      fetchData();
    } catch (error) {
      console.error("Bot operation failed:", error);
    }
  };

  const generatePerformanceData = () => {
    // Generate sample performance data for charts
    const data = [];
    for (let i = 30; i >= 0; i--) {
      data.push({
        date: new Date(Date.now() - i * 24 * 60 * 60 * 1000)
          .toISOString()
          .split("T")[0],
        value: 10000 + Math.random() * 5000 - 2500,
        trades: Math.floor(Math.random() * 10),
        profit: Math.random() * 1000 - 500,
      });
    }
    return data;
  };

  useEffect(() => {
    setPerformanceData(generatePerformanceData());
  }, [selectedBot]);

  if (loading) {
    return (
      <div className="min-h-screen bg-walle-darkblue text-white p-6">
        <div className="max-w-7xl mx-auto space-y-6">
          <div className="flex justify-between items-center">
            <div>
              <div className="h-6 w-48 bg-walle-darkgray rounded mb-2" />
              <div className="h-4 w-72 bg-walle-darkgray rounded" />
            </div>
            <div className="h-9 w-28 bg-walle-darkgray rounded" />
          </div>
          <Card className="p-6 bg-walle-darkgray">
            <div className="h-5 w-40 bg-walle-brown rounded mb-4" />
            <div className="space-y-4">
              <Skeleton className="h-16" rounded="xl" />
              <Skeleton className="h-16" rounded="xl" />
              <Skeleton className="h-16" rounded="xl" />
            </div>
          </Card>
        </div>
      </div>
    );
  }

  const activeBots =
    bots.filter((b) => b.active).length +
    manualBots.filter((b) => b.isActive).length;
  const totalBots = bots.length + manualBots.length;
  const activeManualBots = manualBots.filter((b) => b.isActive).length;

  return (
    <div className="min-h-screen bg-walle-darkblue text-white p-6">
      <div className="max-w-7xl mx-auto">
        <div className="flex justify-between items-center mb-8">
          <div>
            <h1 className="text-3xl font-bold text-walle-yellow">
              ü§ñ WALL-E Trading Bots
            </h1>
            <p className="text-walle-beige">
              Unified Bot Management - Click any bot to edit, adjust settings,
              and see real-time charts
            </p>
          </div>
          <div className="flex items-center space-x-4">
            <div className="flex items-center gap-2">
              <span className="text-sm text-walle-beige">Live Updates</span>
              <StatusPill status={isConnected ? "connected" : "disconnected"} />
            </div>
            <Button
              onClick={createOrUpdateBot}
              className="bg-walle-yellow text-walle-brown hover:bg-walle-orange"
            >
              {selectedBot ? "üíæ Update Bot" : "üöÄ Create Bot"}
            </Button>
          </div>
        </div>

        {/* Stats Cards */}
        <div className="grid grid-cols-1 md:grid-cols-4 gap-4 mb-8">
          <Card className="p-6 bg-walle-darkgray border-walle-rust">
            <div className="text-sm text-walle-beige mb-1">Total Bots</div>
            <div className="text-3xl font-bold text-walle-yellow">
              {totalBots}
            </div>
            <div className="text-xs text-walle-beige mt-1">
              {bots.length} template + {manualBots.length} manual
            </div>
          </Card>
          <Card className="p-6 bg-walle-darkgray border-walle-rust">
            <div className="text-sm text-walle-beige mb-1">Active Bots</div>
            <div className="text-3xl font-bold text-green-400">
              {activeBots}
            </div>
            <div className="text-xs text-walle-beige mt-1">
              {bots.filter((b) => b.active).length} template +{" "}
              {activeManualBots} manual
            </div>
          </Card>
          <Card className="p-6 bg-walle-darkgray border-walle-rust">
            <div className="text-sm text-walle-beige mb-1">Inactive Bots</div>
            <div className="text-3xl font-bold text-gray-400">
              {totalBots - activeBots}
            </div>
          </Card>
          <Card className="p-6 bg-walle-darkgray border-walle-rust">
            <div className="text-sm text-walle-beige mb-1">Strategies</div>
            <div className="text-3xl font-bold text-walle-orange">
              {strategies.length}
            </div>
          </Card>
        </div>

        {/* Unified Bot Interface */}
        <div className="grid grid-cols-1 lg:grid-cols-3 gap-6 mb-8">
          {/* Bot List & Selection */}
          <div className="lg:col-span-1 space-y-4">
            <h2 className="text-xl font-semibold text-walle-yellow mb-4">ü§ñ Your Bots</h2>
            <div className="space-y-3 max-h-96 overflow-y-auto">
              {totalBots === 0 ? (
                <Card className="p-4 bg-walle-darkgray border-walle-rust">
                  <p className="text-walle-beige text-center">No bots created yet</p>
                </Card>
              ) : (
                <>
                  {bots.map((bot) => {
                    const activity = liveActivity[bot.id];
                    const hasRecentActivity = activity && Date.now() - activity.timestamp < 5000;
                    
                    return (
                      <Card 
                        key={bot.id}
                        onClick={() => handleBotSelect(bot, false)}
                        className={`p-4 bg-walle-darkgray border-2 cursor-pointer transition-all hover:border-walle-yellow ${
                          selectedBot?.id === bot.id ? 'border-walle-yellow' : 'border-walle-rust'
                        }`}
                      >
                        <div className="flex justify-between items-start">
                          <div>
                            <h3 className="font-semibold text-walle-yellow">{bot.name}</h3>
                            <p className="text-sm text-walle-beige">Template Bot</p>
                          </div>
                          <div className="flex items-center gap-2">
                            <div className={`w-2 h-2 rounded-full ${bot.active ? 'bg-green-400' : 'bg-gray-400'}`}></div>
                            {hasRecentActivity && <div className="w-2 h-2 rounded-full bg-walle-orange animate-pulse"></div>}
                          </div>
                        </div>
                      </Card>
                    );
                  })}
                  {manualBots.map((bot) => (
                    <Card 
                      key={bot.id}
                      onClick={() => handleBotSelect(bot, true)}
                      className={`p-4 bg-walle-darkgray border-2 cursor-pointer transition-all hover:border-walle-yellow ${
                        selectedBot?.id === bot.id ? 'border-walle-yellow' : 'border-walle-rust'
