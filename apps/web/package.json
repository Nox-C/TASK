{
  "name": "@task/web",
  "version": "1.0.0",
  "main": "public/electron.js",
  "homepage": "./",
  "scripts": {
    "dev": "next dev -p 3001",
    "build": "next build",
    "start": "next start",
    "electron": "electron .",
    "electron-dev": "concurrently \"pnpm dev\" \"pnpm electron\"",
    "electron-pack": "electron-builder",
    "deploy": "./deploy.sh",
    "health": "curl -f http://localhost:3001/api/health || echo '‚ùå Health check failed'",
    "install:prod": "pnpm install --prod",
    "clean": "rm -rf .next out dist"
  },
  "dependencies": {
    "@react-three/drei": "^10.7.7",
    "@react-three/fiber": "^9.5.0",
    "@types/three": "^0.182.0",
    "@wagmi/connectors": "^7.1.5",
    "@wagmi/core": "^3.3.1",
    "axios": "^1.6.0",
    "ethers": "^6.16.0",
    "framer-motion": "^12.29.2",
    "next": "16.1.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-spring": "^10.0.3",
    "recharts": "^2.10.0",
    "three": "^0.182.0",
    "viem": "^2.45.1",
    "zustand": "^5.0.10"
  },
  "build": {
    "appId": "com.task.trading-bot",
    "productName": "TASK Trading Bot",
    "directories": {
      "output": "dist"
    },
    "files": [
      ".next/**",
      "public/**",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "public/assets/wall-e/",
        "to": "assets/wall-e/"
      }
    ],
    "mac": {
      "category": "public.app-category.finance",
      "icon": "wall-e-icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ]
    },
    "win": {
      "icon": "wall-e-icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ]
    },
    "linux": {
      "icon": "wall-e-icon.png",
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        }
      ]
    }
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "concurrently": "^9.2.1",
    "electron": "^40.1.0",
    "electron-builder": "^26.4.0",
    "tailwindcss": "^3.3.0",
    "typescript": "^5.2.0"
  }
}
